{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vitest/jsdom",
      "vitest/browser",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "src/**/*.d.ts",
    "test/**/*.ts",
    "vitest.config.ts",
    ".storybook/**/*.ts",
    "src/**/*.stories.{ts,tsx}"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test/e2e",
    "src/main",
    "src/preload",
    "src/renderer",
    "src/shared"
  ]
}
